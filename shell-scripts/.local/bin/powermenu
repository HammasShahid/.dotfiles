#! /bin/sh

power="ğŸ’¡   Power Off"
restart="ğŸ”ƒ   Restart"
suspend="ğŸŒ™   Suspend"
hibernate="â„ï¸   Hibernate"
logout="â†ªï¸   Log Out"
lock="ğŸ”’   Lock"

# chosen=$(printf "ï€‘  Power Off\nï€  Restart\nï††  Suspend\nï‹œ  Hibernate\nï¡‚  Log Out\nï€£  Lock" | rofi -dmenu -i -theme-str '@import "power.rasi"')
chosen=$(printf "$power\n$restart\n$suspend\n$hibernate\n$logout\n$lock" | rofi -dmenu -i)

case "$chosen" in
	$power) poweroff ;;
	$restart) reboot ;;
	$suspend) systemctl suspend-then-hibernate ;;
  $hibernate) systemctl hibernate ;;
	$logout) loginctl kill-session self ;;
	$lock) slock ;;
	*) exit 1 ;;
esac
