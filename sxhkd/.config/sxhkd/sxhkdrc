#
# wm independent hotkeys
#

super + shift + e
	rofi -show emoji

super + shift + n
	rofi-nerdfonts

super + shift + c
	rofi -show calc

# printscreen
@Print
	$HOME/.local/bin/screenshot 

shift + @Print
	$HOME/.local/bin/screenshot path

super + alt + s
	$HOME/.local/bin/screenshot select

super + alt + shift + s
	$HOME/.local/bin/screenshot select-path

# media keys
XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# volume keys
{ XF86AudioRaiseVolume, Pause }
	$HOME/.local/bin/changevolume up

{ XF86AudioLowerVolume, Scroll_Lock }
	$HOME/.local/bin/changevolume down

{ XF86AudioMute, super + F5 }
	$HOME/.local/bin/changevolume mute

# lockscreen
super + x
	slock

super + shift + x
	$HOME/.local/bin/powermenu

# program launcher
super + r
	rofi -show drun

super + shift + r
	rofi -show window

# Reload sxhkd
super + shift + Escape
	pkill -USR1 -x sxhkd

# notifications
super + alt + n
  dunstctl close

super + alt + shift + n
  dunstctl close-all

super + alt + period
  dunstctl context

super + n
  dunstctl history-pop

super + Return
	$TERMINAL

# browser
super + w
	$BROWSER

# Explorer
super + e
	$EXPLORER

Menu
	xte 'mouseclick 3'
